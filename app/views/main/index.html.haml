%h1
  %center Dashboard

%table.table.table-bordered
  %tr
    %th Court
    %th Required staff
    %th Current staff
    %th Allocated staff
  - @courts.each do |court|
    %tr
      %td
        = court.name
      %td
        = court.staff_total
      %td
        = court.active_workers.count
      %td
        - court.active_workers.each do |worker|
          %p= link_to worker.name, worker_path(worker)
