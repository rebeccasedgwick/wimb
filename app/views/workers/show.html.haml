%h1
  = @worker.name

%p
  = link_to 'Edit personal info', edit_worker_path(@worker)

%h3 Timesheet

%table.table.table-bordered
  %tr
    %th Location
    %th Start time
    %th End time
    %th Duration
  - @worker.shifts.each do |shift|
    %tr
      %td
        = shift.staffing.court.name
      %td{style: "text-align:right"}
        = shift.start_time.to_s(:display_time_and_date).html_safe
      %td{style: "text-align:right"}
        = shift.end_time.to_s(:display_time_and_date).html_safe
      %td{style: "text-align:right"}
        = shift.formatted_duration
